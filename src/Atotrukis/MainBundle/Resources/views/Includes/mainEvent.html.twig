<div class="mainEventWrapper">
        <div class="row">
                <div class="mainEvent">
                    <img src="{{ asset('images/mainEvent2.jpg') }}" alt="alternative">
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <div class="attendmentButton">
                        {% if userRegistered[event.id] == 1 %}
                            <button class="btn btn-default attendingButton" type="button">
                                Dalyvauju
                                <span class="glyphicon glyphicon-ok"></span>
                                <span class="eventID">{{ event.id }}</span>
                                <span class="jsRoute">{{ path("leave_event")}}</span>
                            </button>
                        {% else %}
                            <button class="btn btn-default attendButton" type="button">
                                Dalyvausiu
                                <span class="glyphicon glyphicon-thumbs-up"></span>
                                <span class="eventID">{{ event.id }}</span>
                                <span class="jsRoute">{{ path("attend_event")}}</span>
                            </button>
                        {% endif %}
                        </div>
                    {% endif %}
                </div>
            <div class="mainEventLeftPos">
                <div class="row">
                    <h4 data-toggle="tooltip" data-placement="top" title="{{ event.name }}" class="mainEventName">
                        {{ event.name }}
                    </h4>
                    <div class="row">
                        <div class="col-md-4 mainEventDataNames">
                           <small><span class="glyphicon glyphicon-time"></span> Nuo:</small><br>
                           <small><span class="glyphicon glyphicon-time"></span> Iki:</small><br>
                           <small><span class="glyphicon glyphicon-home"></span> Miestas:</small><br>
                           <small><span class="glyphicon glyphicon-user"></span> Dalyvių:</small>
                        </div>
                        <div class="col-md-8">
                            <small>{{ startDate[event.id] }}</small><br>
                            <small>{{ endDate[event.id] }}</small><br>
                            <small>{{ event.city }}</small><br>
                            <small>{{ attending[event.id] }}</small>
                        </div>
                    </div>

                </div>
                <div class="row mainEventDescription">
                    <b>Aprašymas:</b>
                    <p class="restricteDescription">{{ event.description }}</p>
                </div>
            </div>
            <div class="mainEventRightPos">
                <a href="{{ path('only_comments', { 'eventId': event.id}) }}"><button type="button" class="btn-mainEvent btn btn-primary btn-circle"><p>Komentarai<br>(8000)</p><span class="glyphicon glyphicon-chevron-right"></span></button></a>
                <a href="{{ path('_show_event', { 'eventId': event.id }) }}"><button type="button" class="btn-mainEvent btn btn-primary btn-circle"><p>Plačiau</p><span class="glyphicon glyphicon-chevron-right"></span></button></a>
            </div>
        </div>
    </div>


