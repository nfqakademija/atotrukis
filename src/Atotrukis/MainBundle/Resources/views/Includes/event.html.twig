<a class="eventLink" href="{{ path('_show_event', { 'eventId': event.id }) }}">
    <div class="event">
        {% if userRegistered[event.id] == 1 %}
            <button class="btn btn-default attendingButton-sml" type="button">
                <span class="glyphicon glyphicon-ok"></span>
                <span class="eventID">{{ event.id }}</span>
                <span class="jsRoute">{{ path("leave_event")}}</span>
            </button>
        {% else %}
            <button class="btn btn-default attendButton-sml" type="button">
                <span class="glyphicon glyphicon-thumbs-up"></span>
                <span class="eventID">{{ event.id }}</span>
                <span class="jsRoute">{{ path("attend_event")}}</span>
            </button>
        {% endif %}
        <img src="{{ asset('images/mainEvent2.jpg') }}" alt="alternative">
        <div class="eventTitleWrapper">
            <h5>{{ event.name }}</h5>
            <p>{{ startDate[event.id] }}</p>
        </div>
    </div>
</a>