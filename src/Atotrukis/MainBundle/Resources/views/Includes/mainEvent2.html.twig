        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <div class="attendmentButton">
                {% if userRegistered[event.id] == 1 %}
                    <button class="btn btn-default attendingButton-sml eventBtn" type="button">
                        <span class="glyphicon glyphicon-ok"></span>
                        <span class="eventID">{{ event.id }}</span>
                        <span class="jsRoute">{{ path("leave_event_sml")}}</span>
                    </button>
                {% else %}
                    <button class="btn btn-default attendButton-sml eventBtn" type="button">
                        <span class="glyphicon glyphicon-thumbs-up"></span>
                        <span class="eventID">{{ event.id }}</span>
                        <span class="jsRoute">{{ path("attend_event_sml")}}</span>
                    </button>
                {% endif %}
            </div>
        {% endif %}
<a class="mainEvent2Link" href="{{ path('_show_event', { 'eventId': event.id }) }}">
    <div class="mainEvent2">
            <img src="{{ asset('images/mainEvent2.jpg') }}" alt="alternative">
            <div class="mainEvent2TitleWrapper">
                    <h5  data-toggle="tooltip" data-placement="top" title="{{ event.name }}">{{ event.name }}</h5>
                <div class="eventInfoSmall">
                    <div class="row">
                        <div class="col-md-3 mainEventDataNames">
                            <small><span class="glyphicon glyphicon-time"></span> Nuo:</small><br>
                            <small><span class="glyphicon glyphicon-time"></span> Iki:</small><br>
                        </div>
                        <div class="col-md-9 mainEventDataValues">
                            <small>{{ startDate[event.id] }}</small><br>
                            <small>{{ endDate[event.id] }}</small><br>
                        </div>
                    </div>
                </div>
            </div>
    </div>
</a>