<div class="loginFormWrapper mainContentWrapper">
    <div class="row">
        <div class="col-md-6 border-right">

            <form role="form" action='{{ path('fos_user_registration_register') }}' {{ form_enctype(form) }} novalidate="novalidate" method="POST" class="pull-right">
                <fieldset>

                    <div class="form-group">
                        {{ form_label(form.name, 'Vardas:', {'attr': {'class': 'control-label'} }) }}
                        {{  form_errors(form.name) }}
                        {{ form_widget(form.name, {'attr' : {'class' : 'span12 form-control' }}) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.email, 'El. paštas:', {'attr': {'class': 'control-label'}}) }}
                        {{  form_errors(form.email) }}
                        {{ form_widget(form.email, {'attr' : {'class' : 'span12 form-control' }}) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.plainPassword.first, 'Slaptažodis:', {'attr': {'class': 'control-label'}}) }}
                        {{  form_errors(form.plainPassword.first) }}
                        {{ form_widget(form.plainPassword.first, {'attr' : {'class' : 'span12 form-control' }}) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.plainPassword.second, 'Pakartoti Slaptažodį:', {'attr': {'class': 'control-label'}}) }}
                        {{  form_errors(form.plainPassword.second) }}
                        {{ form_widget(form.plainPassword.second, {'attr' : {'class' : 'span12 form-control' }}) }}
                    </div>

                    <div class="form-group">
                        <div class="controls">
                            <input type="submit" value="Registruotis" class="btn btn-default"/>
                        </div>
                    </div>
                </fieldset>
            {{ form_rest(form) }}
            </form>
        </div>
        <div class="col-md-6">
            <label for="facebook">Prisijunkite su Facebook</label>
            <div class="btn-group-vertical social-btns">
                <div class="btn btn-default  fb-btn">
                    <a href="{{ path('hwi_oauth_service_redirect', {'service': 'facebook'}) }}"><span class="fb-icon"></span>Facebook</a>
                </div>
            </div>
        </div>
    </div>
</div>
